<?import javafx.scene.text.Font?>
<VBox fx:controller="views.tournament.handleTournamentStyle.HandleTournamentStyleController" xmlns:fx="http://javafx.com/fxml"
      fx:id="TournamentStyleWindow" id="TournamentStyleContainer">

    <Text text="Tournament Style" fill="white">
        <font>
            <Font name="dotty" size="70"/>
        </font>
    </Text>

    <VBox>
            <Text text="Name of Tournament" fill='white'></Text>
            <TextField styleClass="TournamentStyle" fx:id="name" minWidth="75" maxWidth="130"/>
    </VBox>

    <VBox>
            <Text text="Size of Tournament" fill='white'></Text>
            <TextField styleClass="TournamentStyle" fx:id="size" minWidth="30" maxWidth="130"/>
    </VBox>

    <VBox>
            <Text text="Group choices" fill='white'></Text>
            <CheckBox fx:id="groupsChoice"/>
    </VBox>

    <VBox>
            <Text text="Amount of groups" fill='white'></Text>
            <TextField styleClass="TournamentStyle" fx:id="noOfGroups" minWidth="30" maxWidth="130"/>
    </VBox>

    <VBox>
            <Text text="Amount of rounds" fill='white'></Text>
            <TextField styleClass="TournamentStyle" fx:id="rounds" minWidth="30" maxWidth="130"/>
    </VBox>

    <VBox>
            <Text text="Amount of winners in a group" fill='white'></Text>
            <TextField styleClass="TournamentStyle" fx:id="groupWinners" minWidth="30" maxWidth="130"/>
    </VBox>

    <VBox>
            <Text text="Elimination" fill='white'></Text>
            <CheckBox fx:id="eliminationChoice"/>
    </VBox>

    <VBox >
            <Text text="Best of arena games" fill='white'></Text>
            <TextField styleClass="TournamentStyle" fx:id="bestOfGames" minWidth="30" maxWidth="130"/>
    </VBox>

    <VBox>

            <Text text="Description" fill='white'></Text>
            <TextArea styleClass="tournamentTextBoxes" fx:id="description" minWidth="100" maxHeight="250" maxWidth="500" wrapText="true"/>

    </VBox>

    <Text text=" "/>

    <Button text="Submit" styleClass="loginButton" fx:id="submit" />

    <Text text="" fill="white" fx:id="confirmationText" />
</VBox>