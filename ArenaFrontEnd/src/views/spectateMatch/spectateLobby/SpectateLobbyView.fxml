<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.cell.TextFieldListCell?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableRow?>
<?import javafx.scene.control.TableColumn?>
<VBox fx:controller="views.spectateMatch.spectateLobby.HandleSpectateLobbyController" xmlns:fx="http://javafx.com/fxml"
      fx:id="TournamentStyleWindow" id="TournamentStyleContainer" >
            <HBox maxHeight="50">
                <HBox prefWidth="200"></HBox>
                <Text fx:id="spectatorText" text="Spectator view" fill="white" textAlignment="CENTER"/>
            </HBox>


            <HBox>
                <VBox prefWidth="300">
                    <Button fx:id="othello" text="Othello" textFill="aqua"></Button>
                    <Button fx:id="ticTacToe" text="TicTacToe" textFill="aqua"></Button>
                    <Button text="Pacman" textFill="forestgreen"></Button>
                </VBox>
                <TableView fx:id ="tableTournaments" visible="false">
                    <columns>
                        <TableColumn prefWidth="200" text="LeagueName." fx:id="leagueCol" />
                        <TableColumn prefWidth="200" text="TournamentName." fx:id="tourNameCol" />
                        <TableColumn prefWidth="200" text="Number of Matches" fx:id="nrMatchesCol" />
                    </columns>
                </TableView>
                <HBox prefWidth="100"></HBox>
                <TableView fx:id ="tournamentMatchTable" visible="false">
                    <columns>
                        <TableColumn prefWidth="200" text="TournamentName." fx:id="tournamentNameCol" />
                        <TableColumn prefWidth="200" text="Match" fx:id="matchCol" />
                        <TableColumn prefWidth="200" text="CurrentScore" fx:id="curScoreCol" />
                    </columns>
                </TableView>
                <Label fx:id="placeHolder" text="YOU MADE IT" textFill="crimson" visible="false" wrapText="true"></Label>
            </HBox>
</VBox>