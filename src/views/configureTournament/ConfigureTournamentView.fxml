<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="views.configureTournament.ConfigureTournamentViewController"
            stylesheets="/views/main.css">
    <VBox fx:id="newTournamentContainer">
        <Label text="Create tournament style" styleClass="tournamentLabel"/>
        <HBox fx:id="tournamentHbox">
            <Label text="Name:" styleClass="tournamentLabel"/>
            <TextField styleClass="tournamentName" fx:id="tournamentName"/>
        </HBox>
        <Label text="Description:" styleClass="tournamentLabel"/>
        <TextArea styleClass="tournamentDesc" fx:id="tournamentDesc"/>
        <Label text="Date" styleClass="tournamentLabel"/>
        <TextField fx:id="tournamentDate"/>
        <Label text="Tournament style:" styleClass="tournamentLabel"/>
        <ComboBox styleClass="tournamentComboBox" fx:id="tournamentComboBox">
            <items>
                <Text text="Tree"/>
                <Text text="Soil"/>
                <Text text="Fire"/>
            </items>
        </ComboBox>
        <Button text="Submit" styleClass="tournamentButton" fx:id="buttonTournamentSubmit"/>
    </VBox>
</BorderPane>
